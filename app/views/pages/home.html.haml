.fullpage
  #section1.section
    -#- if notice
    -#  %p.alert.alert-success= notice
    -#- if alert
    -#  %p.alert.alert-danger= alert
    -#= yield
    -#= link_to 'Home', root_path,class:"ololo"
    .col-xs-2
    .col-xs-4
      %h1 Hello!!
    .col-xs-1
    .col-xs-3
      .pull-right
        - unless user_signed_in?
          .mytab
            %ul.nav.nav-tabs
              %li.active
                %a{"data-toggle" => "tab", :href => "#sign_in"} Sign In
              %li
                %a{"data-toggle" => "tab", :href => "#sign_up"} Sign Up
            .tab-content
              .tab-pane#sign_up
                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  -#= devise_error_messages!
                  %br
                  .field
                    = f.email_field :email, autofocus: true,placeholder:"email"
                  .field
                    - if @minimum_password_length
                      %em
                        (#{@minimum_password_length} characters minimum)
                    = f.password_field :password, autocomplete: "off",placeholder:"password"
                  .field
                    = f.password_field :password_confirmation, autocomplete: "off",placeholder:"password confirmation"
                  .actions
                    = f.submit "Sign up"
                -#= render "users/shared/links"
              .tab-pane.active#sign_in
                = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                  %br
                  .field
                    = f.email_field :email, autofocus: true,placeholder:"email"
                  .field
                    = f.password_field :password, autocomplete: "off",placeholder:"password"

                  -#- if devise_mapping.rememberable?
                  -#  .field
                  -#    %br
                  -#    = f.check_box :remember_me
                  -#    = f.label :remember_me

                  .actions
                    = f.submit "Log in"
                  %br
                = render "users/shared/links"


    .col-xs-2
    -#=image_tag 'bg5.jpg'
  #section2.section
    %h1 Title 2
  #section3.section
    %h1 Title 3
  #section4.section
    %h1 Title 4
